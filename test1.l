
%{
int count = 0;
%}

%option noyywrap
%option nounistd
%option never-interactive

%%

[A-Z]		{
			printf("%s capital letter\n", yytext);
       			count++;
		}

.     		{
			printf("%s not a capital letter\n", yytext);
		}

\n    		{
			return 0;
		}

%%

int main() {
	yylex();
	printf("\nNumber of Capital letters: %d\n", count);
	return 0;
}
